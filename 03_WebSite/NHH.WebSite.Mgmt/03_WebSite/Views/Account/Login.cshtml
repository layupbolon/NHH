    </head>

    <body class="login-layout">
        <div class="main-container">
            <div class="main-content">
                <div class="row">
                    <div class="col-sm-10 col-sm-offset-1">
                        <div class="login-container " style="width:460px;">
                            <div class="center">
                                <h1>
                                    <span class="red">立天唐人</span>智能商业管理平台
                                </h1>
                                <h4 class="blue" id="id-company-text">&copy; NHH China</h4>
                        </div>

                        <div class="space-14"></div>

                        <div class="position-relative">
                            <div id="login-box" class="login-box visible widget-box no-border">
                                <div class="widget-body">
                                    <div class="widget-main">
                                        <h4 class="header blue lighter bigger">
                                            请登录：
                                        </h4>

                                        <div class="space-6"></div>

                                        @using (Html.BeginForm())
                                        {
                                            <label class="block clearfix">
                                                @Html.TextBoxFor(m => m.UserName, new { @class = "form-control", @placeholder = "请输入用户名" })
                                                <span class="red">
                                                    @Html.ValidationMessageFor(m => m.UserName)
                                                </span>
                                            </label>
                                            <label class="block clearfix">
                                                @Html.PasswordFor(m => m.Password, new { @class = "form-control", @placeholder = "请输入登录密码" })
                                                <span class="red">
                                                    @Html.ValidationMessageFor(m => m.Password)
                                                </span>
                                            </label>
                                            <div class="space"></div>
                                            <div class="clearfix">
                                                <input type="button" style="width:75px; margin-left:15px;" class="pull-right btn btn-sm btn-primary" value="忘记密码" id="FotGetPassword"/>
                                                @*<input type="button" style="width:75px; margin-left:15px;" class="pull-right btn btn-sm btn-primary" onclick="ChangePassworFun()" value="修改密码" id="Changepassword"/>*@
                                                <input type="submit" class="width-35 pull-right btn btn-sm btn-primary" value="登录" />
                                            </div>
                                        }
                                    </div><!-- /.widget-main -->
                                </div><!-- /.widget-body -->
                            </div><!-- /.login-box -->

                        </div><!-- /.position-relative -->
                    </div>
                </div><!-- /.col -->
            </div><!-- /.row -->
        </div><!-- /.main-content -->
    </div><!-- /.main-container -->
    <!-- basic scripts -->

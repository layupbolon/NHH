@{Layout = "~/Views/Shared/_Layout.cshtml";}
@model NHH.Models.Campaign.CampaignPlanDetailModel

<script type="text/javascript">
    document.domain = "@NHH.Framework.Utility.ParamManager.GetStringValue("domain")";
</script>

@{Html.RenderPartial("_PartialCrumbs", Model.CrumbInfo);}
<style>
    .uploadify-queue {
        display: none;
    }
</style>
<div class="page-content">
    <div class="page-header">
        <h1>企划活动详情</h1>
    </div><!-- /.page-header -->
    <div class="row">
        <div class="col-xs-12">
            @using (Html.BeginForm("Edit", "Campaign", new { area = "Campaign" }, FormMethod.Post, new { @class = "form-horizontal", role = "form", novalidate = "novalidate" }))
            {
                @Html.AntiForgeryToken()
                <div class="form-group">
                    <label class="col-sm-3 control-label no-padding-right" for="form-input-readonly">项目： </label>
                    <div class="col-sm-9">
                        <span class="defauletext">@Model.ProjectName</span>
                    </div>
                </div>
                <div class="space-4"></div>

                <div class="space-4"></div>
                <div class="form-group">
                    <label class="col-sm-3 control-label no-padding-right" for="form-field-1">活动名称： </label>
                    <div class="col-sm-9">
                        <span class="defauletext">@Model.CampaignName</span>
                    </div>
                </div>
                <div class="form-group">
                    <label class="col-sm-3 control-label no-padding-right" for="form-field-1">活动地点： </label>
                    <div class="col-sm-9">
                        <span class="defauletext">@Model.Location</span>
                    </div>
                </div>
                <div class="space-4"></div>
                <div class="form-group">

                    <label class="col-sm-3 control-label no-padding-right" for="form-field-1">活动时间： </label>
                    <div class="col-sm-9">
                        <span class="defauletext">@(Model.StartDate.HasValue ? Model.StartDate.Value.ToString("yyyy-MM-dd") : string.Empty) 至</span>
                        <span class="defauletext">@(Model.StartDate.HasValue ? Model.EndDate.Value.ToString("yyyy-MM-dd") : string.Empty)</span>
                    </div>
                </div>
                <div class="form-group">
                    <label class="col-sm-3 control-label no-padding-right" for="form-field-1">活动类型： </label>
                    <div class="col-sm-9">
                        <span class="defauletext">@Model.CampaignType</span>
                    </div>
                </div>
                <div class="space-4"></div>
                <div class="form-group">
                    <label class="col-sm-3 control-label no-padding-right" for="form-field-1">活动简介： </label>
                    <div class="col-sm-9">
                        <span class="defauletext">@Model.CampaignBrief</span>
                    </div>
                </div>
                <div class="space-4"></div>
                <fieldset>
                    <legend>@(Model.PageType == 1 ? "唐小二页面编辑" : "官网页面编辑")</legend>
                    <div class="form-group">
                        <label class="col-sm-3 control-label no-padding-right" for="form-field-1">页面主题： </label>
                        <div class="col-sm-9">
                            <span class="defauletext">@Model.PageTitle</span>
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="col-sm-3 control-label no-padding-right" for="form-field-1">发布时间： </label>
                        <div class="col-sm-9">
                            <span class="defauletext">@(Model.PublishDate + " " + Model.PublishTime)</span>
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="col-sm-3 control-label no-padding-right" for="form-input-readonly">发布状态： </label>
                        <div class="col-sm-9">
                            <span class="defauletext">@(Model.PublishStatusName + "(编辑已锁定)")</span>
                        </div>
                    </div>

                    <div class="form-group">
                        <label class="col-sm-3 control-label no-padding-right" for="form-field-1">SEO标题： </label>
                        <div class="col-sm-9 input-merge">
                            @Html.TextBoxFor(m => m.SEO_Title, new { @class = "col-xs-10 col-sm-5" })
                        </div>
                    </div>

                    <div class="form-group">
                        <label class="col-sm-3 control-label no-padding-right" for="form-field-1">SEO关键字： </label>
                        <div class="col-sm-9 input-merge">
                            @Html.TextBoxFor(m => m.KeyWords, new { @class = "col-xs-10 col-sm-5" })
                        </div>
                    </div>

                    <div class="form-group">
                        <label class="col-sm-3 control-label no-padding-right" for="form-field-1">SEO描述： </label>
                        <div class="col-sm-9 input-merge">
                            @Html.TextBoxFor(m => m.Description, new { @class = "col-xs-10 col-sm-5" })
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="col-sm-3 control-label no-padding-right" for="form-field-1"> 封面图片： </label>
                        <div class="col-sm-9">
                            <div class="uploadimg">
                                <ul class="ace-thumbnails clearfix">
                                    <li>
                                        <a href="@NHH.Framework.Utility.UrlHelper.GetImageUrl(Model.PageCover)" data-rel="colorbox" id="PageCoverHref">
                                            <img width="100" height="73" id="imgIdMap" src="@NHH.Framework.Utility.UrlHelper.GetImageUrl(Model.PageCover, 100)" />
                                        </a>
                                    </li>
                                </ul>
                            </div>
                        </div>
                    </div>
                    <div class="space-4"></div>
                    <div class="form-group">
                        <label class="col-sm-3 control-label no-padding-right" for="form-field-1">页面内容： </label>
                        <div class="col-sm-9">
                            @Html.TextAreaFor(m => m.PageContent)
                        </div>
                    </div>
                    <div class="space-4"></div>
                    
                </fieldset>
                <div class="space-4"></div>
            }
        </div>
    </div>
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval", "~/Scripts/ueditor/ueditor.config.js", "~/Scripts/ueditor/ueditor.all.js")
    <script type="text/javascript">
        var editorOption = {
            //initialFrameWidth: 1024,
            initialFrameHeight: 600,
            maximumWords: 9999999
        };
        var editor = new baidu.editor.ui.Editor(editorOption);
        editor.render('PageContent');
    </script>
}

<script src="~/Scripts/ImagePopUp.js"></script>

@{Layout = "~/Views/Shared/_Layout.cshtml";}
@model NHH.Models.Project.ProjectUnit.ProjectUnitInfoModel

@{Html.RenderPartial("_PartialCrumbs", Model.CrumbInfo);}
<div class="page-content">
    <div class="page-content-area">
        <div class="page-header">
            <h1>
                铺位信息
            </h1>
        </div><!-- /.page-header -->
        <div class="row">
            <div class="col-xs-12">
                <!-- PAGE CONTENT BEGINS -->
                <div class="row">
                    <div class="col-xs-12">                        
                        <div class="space-4"></div>
                        <div class="form-group">
                            <label class="col-sm-3 control-label no-padding-right"> 楼层： </label>
                            <div class="col-sm-9">
                                <span class="defauletext">
                                    @Model.BuildingName @Model.FloorName
                                </span>
                            </div>
                        </div>
                        <div class="space-4"></div>
                        <div class="form-group">
                            <label class="col-sm-3 control-label no-padding-right"> 状态： </label>
                            <div class="col-sm-9">
                                <span class="defauletext">
                                    @Model.UnitStatusName
                                </span>
                            </div>
                        </div>
                        <div class="space-4"></div>
                        <div class="form-group">
                            <label class="control-label col-xs-12 col-sm-3 no-padding-right">类型：</label>
                            <div class="col-xs-12 col-sm-9">
                                <span class="defauletext">
                                    @Model.UnitTypeName
                                </span>
                            </div>
                        </div>
                        <div class="space-4"></div>
                        <div class="form-group">
                            <label class="control-label col-xs-12 col-sm-3 no-padding-right">铺位编号：</label>
                            <div class="col-xs-12 col-sm-9">
                                <span class="defauletext">
                                    @Model.UnitNumber
                                </span>
                            </div>
                        </div>
                        <div class="space-4"></div>
                        <div class="form-group">
                            <label class="control-label col-xs-12 col-sm-3 no-padding-right">计租面积：</label>
                            <div class="col-xs-12 col-sm-9">
                                <span class="defauletext">
                                    @Model.UnitArea
                                </span>
                            </div>
                        </div>
                        <div class="space-4"></div>
                        <div class="form-group">
                            <label class="control-label col-xs-12 col-sm-3 no-padding-right">平面图位置：</label>
                            <div class="col-xs-12 col-sm-9">
                                <span class="defauletext">
                                    <a href="javascript:void(0);" data-src="@Model.FloorMapFileName" class="lnkImg">
                                        <img src="@NHH.Framework.Utility.UrlHelper.GetImageUrl(Model.FloorMapFileName)" width="100" />
                                    </a>                                    
                                </span>
                            </div>
                        </div>
                        <div class="space-4"></div>
                        <div class="form-group">
                            <label class="control-label col-xs-12 col-sm-3 no-padding-right">平面坐标：</label>
                            <div class="col-xs-12 col-sm-9">
                                <span class="defauletext">
                                    @Model.FloorMapLocation &nbsp;
                                </span>
                            </div>
                        </div>
                    </div><!-- /.span -->
                </div><!-- /.row -->
            </div><!-- /.col -->
        </div><!-- /.row -->
    </div><!-- /.page-content-area -->
</div>
<div id="modal" class="modal fade" tabindex="-1" aria-hidden="true" style="display: none;"></div>
<script type="text/javascript">
    //图片
    $(".lnkImg").click(function () {
        var src = "@NHH.Framework.Utility.ParamManager.GetStringValue("ImageSite")";
        src += $(this).attr("data-src");
        $("#modal").html("<div class='imgContent'><ul><li><img width='800' src='" + src + "' /></li></ul></div>").modal();
    });
</script>

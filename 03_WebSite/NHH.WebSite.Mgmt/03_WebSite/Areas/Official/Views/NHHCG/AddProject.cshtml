@{Layout = "~/Views/Shared/_Layout.cshtml";}
@model NHH.Models.Official.Project.NHHCGProjectModel

@{Html.RenderPartial("_PartialCrumbs", Model.CrumbInfo);}

<script type="text/javascript">
    document.domain = "@NHH.Framework.Utility.ParamManager.GetStringValue("domain")";
</script>

<div class="page-content">
    <div class="page-header">
        <h1>创建官网项目</h1>
    </div>
    <div class="row">
        <div class="col-xs-12">
            @using (Html.BeginForm("AddProject", "NHHCG", new { area = "Official" }, FormMethod.Post, new { @class = "form-horizontal", role = "form", novalidate = "novalidate" }))
            {
                @Html.AntiForgeryToken()
                <div class="form-group">
                    <label class="col-sm-3 control-label no-padding-right" for="form-field-1"> <span class="req">*</span>项目名称： </label>
                    <div class="col-sm-9">
                        @Html.TextBox("ProjectName", "", new { @class = "col-xs-10 col-sm-5" })
                        <span class="help-inline col-xs-12 col-sm-7 middle red">
                            @Html.ValidationMessage("ProjectName")
                        </span>
                    </div>
                </div>
                <div class="form-group">
                    <label class="col-sm-3 control-label no-padding-right" for="form-field-1"> <span class="req">*</span>简称： </label>
                    <div class="col-sm-9">
                        @Html.TextBox("BriefName", "", new { @class = "col-xs-10 col-sm-5" })
                        <span class="help-inline col-xs-12 col-sm-7 middle red">
                            @Html.ValidationMessage("BriefName")
                        </span>
                    </div>
                </div>
                <div class="form-group">
                    <label class="col-sm-3 control-label no-padding-right" for="form-field-1"> <span class="req">*</span>特色介绍： </label>
                    <div class="col-sm-9">
                        @Html.TextBox("Feature", "", new { @placeholder = "要求短而精练，例如：超大体量，业态丰富", @class = "col-xs-10 col-sm-5" })
                        <span class="help-inline col-xs-12 col-sm-7 middle red">
                            @Html.ValidationMessage("Feature")
                        </span>
                    </div>
                </div>
                
                <div class="form-group">
                    <label class="col-sm-3 control-label no-padding-right" for="form-field-1"> <span class="req">*</span>商业类型： </label>
                    <div class="col-sm-9">
                        @Html.DropDownList("BusinessType", ViewData["BusinessTypeList"] as SelectList, new { @class = "col-xs-10 col-sm-5" })
                    </div>
                </div>
                <div class="form-group">
                    <label class="col-sm-3 control-label no-padding-right" for="form-field-1"> <span class="req">*</span>开业时间： </label>
                        <span class="col-sm-9 input-daterange">
                            @Html.TextBoxFor(m => m.OpeningDate,DateTime.Now.ToString("yyyy-MM-dd"), new { id = "OpeningDate", @class = "iconTime" })
                        </span>
                    <span class="help-inline col-xs-12 col-sm-7 middle red">
                        @Html.ValidationMessage("OpeningDate")
                    </span>
                </div>
                <div class="form-group">
                    <label class="col-sm-3 control-label no-padding-right" for="form-field-1"> <span class="req">*</span>运营面积（万平方米）： </label>
                    <div class="col-sm-9">
                        @Html.TextBox("OperatingArea", "", new { @class = "col-xs-10 col-sm-2" }) 
                        <span class="help-inline col-xs-12 col-sm-7 middle red">
                            @Html.ValidationMessage("OperatingArea")
                        </span>
                    </div>
                </div>
                <div class="form-group">
                    <label class="col-sm-3 control-label no-padding-right" for="form-field-1"> <span class="req">*</span>建筑面积（万平方米）： </label>
                    <div class="col-sm-9">
                        @Html.TextBox("GrossArea", "", new { @class = "col-xs-10 col-sm-2" }) 
                        <span class="help-inline col-xs-12 col-sm-7 middle red">
                            @Html.ValidationMessage("GrossArea")
                        </span>
                    </div>
                </div>
                <div class="form-group">
                    <label class="col-sm-3 control-label no-padding-right" for="form-field-1"> <span class="req">*</span>商圈人口（万人）： </label>
                    <div class="col-sm-9">
                        @Html.TextBox("Population", "", new { @class = "col-xs-10 col-sm-2" })
                        <span class="help-inline col-xs-12 col-sm-7 middle red">
                            @Html.ValidationMessage("Population")
                        </span>
                    </div>
                </div>
                <div class="form-group">
                    <label class="col-sm-3 control-label no-padding-right" for="form-field-1"> <span class="req">*</span>商圈位置： </label>
                    <div class="col-sm-9">
                        @Html.TextBox("Position", "", new { @class = "col-xs-10 col-sm-5" })
                        <span class="help-inline col-xs-12 col-sm-7 middle red">
                            @Html.ValidationMessage("Position")
                        </span>
                    </div>
                </div>
                <div class="form-group">
                    <label class="col-sm-3 control-label no-padding-right" for="form-field-1"> <span class="req">*</span>月人流量（万人次）： </label>
                    <div class="col-sm-9">
                        @Html.TextBox("MonthlyHumanTraffic", "", new { @class = "col-xs-10 col-sm-2" })
                        <span class="help-inline col-xs-12 col-sm-7 middle red">
                            @Html.ValidationMessage("MonthlyHumanTraffic")
                        </span>
                    </div>
                </div>
                <div class="form-group">
                    <label class="col-sm-3 control-label no-padding-right" for="form-field-1"> <span class="req">*</span>咨询电话： </label>
                    <div class="col-sm-9">
                        @Html.TextBox("Tel", "", new { @class = "col-xs-10 col-sm-2" })
                        <span class="help-inline col-xs-12 col-sm-7 middle red">
                            @Html.ValidationMessage("Tel")
                        </span>
                    </div>
                </div>
                <div class="form-group">
                    <label class="col-sm-3 control-label no-padding-right" for="form-field-1">经度： </label>
                    <div class="col-sm-9">
                        @Html.TextBox("Longitude", "", new { @class = "col-xs-10 col-sm-2" })
                        <span class="help-inline col-xs-12 col-sm-7 middle red">
                            @Html.ValidationMessage("Longitude")
                        </span>
                    </div>
                </div>
                <div class="form-group">
                    <label class="col-sm-3 control-label no-padding-right" for="form-field-1">纬度： </label>
                    <div class="col-sm-9">
                        @Html.TextBox("Latitude", "", new { @class = "col-xs-10 col-sm-2" })
                        <span class="help-inline col-xs-12 col-sm-7 middle red">
                            @Html.ValidationMessage("Latitude")
                        </span>
                    </div>
                </div>
    <div class="form-group">
        <label class="col-sm-3 control-label no-padding-right" for="form-field-1"> <span class="req">*</span>公共交通： </label>
        <div class="col-sm-9">
            @Html.TextArea("PublicTransport", "", 5, 5, new { @class = "col-xs-10 col-sm-5" })
            <span class="help-inline col-xs-12 col-sm-7 middle red">
                @Html.ValidationMessage("PublicTransport")
            </span>
        </div>
    </div>
                <div class="space-4"></div>
                <fieldset>
                    <div class="page-header">
                        <h1>项目介绍</h1>
                    </div>
                    <div class="form-group">
                        <div class="form-horizontal">
                            @Html.TextAreaFor(m => m.Introduce)
                        </div>
                        <span class="help-inline col-xs-12 col-sm-7">
                            <span class="middle red">
                                @Html.ValidationMessageFor(m => m.Introduce)
                            </span>
                        </span>
                    </div>
                </fieldset>
                <div class="space-4"></div>
                <div class="form-group">
                    <label class="col-sm-3 control-label no-padding-right" for="form-input-readonly"></label>
                    <div class="col-sm-9">
                        <button class="btn btn-xs btn-success btn-font" type="submit" id="btnSubmit">保存</button>
                        &nbsp; &nbsp; &nbsp;
                        <button class="btn btn-xs btn-success btn-font" type="reset">取消</button>
                    </div>
                </div>
            }
        </div>
    </div>
</div>
@section Scripts {
    @Scripts.Render("~/bundles/jqueryval", "~/Scripts/ueditor/ueditor.config.js", "~/Scripts/ueditor/ueditor.all.js")
    <script type="text/javascript">
        var editorOption = {
            //initialFrameWidth: 1024,
            initialFrameHeight: 600,
            maximumWords: 9999999
        };
        var editor = new baidu.editor.ui.Editor(editorOption);
        editor.render('Introduce');
    </script>
}
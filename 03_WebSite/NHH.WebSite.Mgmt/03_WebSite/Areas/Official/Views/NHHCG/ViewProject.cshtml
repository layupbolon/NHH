@{Layout = "~/Views/Shared/_Layout.cshtml";}
@using System.Diagnostics
@model NHH.Models.Official.Project.NHHCGProjectModel

@{Html.RenderPartial("_PartialCrumbs", Model.CrumbInfo);}


<div class="rowA">
    <div class="col-5">
        <h4 class="lighter mb20">
            项目名称：<span style="color:brown">@Model.ProjectName</span>
        </h4>
        <div class="hr hr-18 hr-double dotted"></div>
        <h4 class="lighter">项目信息</h4>
        <dl class="form-content form-content-edit form-row-comb">
            <dd>
                <label>简称：</label>
                @Model.BriefName
            </dd>
            <dd>
                <label>商业类型：</label>
                @Model.BusinessTypeName
            </dd>
            <dd>
                <label>特色介绍：</label>
                @Model.Feature
            </dd>
            <dd>
                <label>开业时间：</label>
                @Model.OpeningDate.ToString("yyyy-MM-dd")
            </dd>
            <dd>
                <label>运营面积：</label>
                @Model.OperatingArea.ToString("#.##") 万平米
            </dd>
            <dd>
                <label>建筑面积：</label>
                @Model.GrossArea.ToString("#.##") 万平米
            </dd>
            <dd>
                <label>商圈人口：</label>
                @Model.Population 万人
            </dd>
            <dd>
                <label>商圈位置：</label>
                @Model.Position
            </dd>
            <dd>
                <label>月均人流量：</label>
                @Model.MonthlyHumanTraffic 万人
            </dd>
            <dd>
                <label>咨询电话：</label>
                @Model.Tel
            </dd>
            <dd>
                <label>经度：</label>
                @Model.Longitude
            </dd>
            <dd>
                <label>纬度：</label>
                @Model.Latitude
            </dd>
        </dl>
        <div class="clear"></div>
    </div>
    <div class="col-5">
        <h4 class="lighter mb20">
            入驻商家
        </h4>
        <div class="uploadimg" id="ImageList">
            @foreach (var item in Model.MerchantLogoList.OrderBy(a => a.Seq))
            {
                <dl id='img-@item.PicID'>
                    <dd>
                        <a href="@NHH.Framework.Utility.UrlHelper.GetImageUrl(item.Path)" data-rel="colorbox">
                            <img class='ImageItem' src='@NHH.Framework.Utility.UrlHelper.GetImageUrl(item.Path, 100)' data-filepath='@item.Path'>
                        </a>
                    </dd>
                </dl>
            }
        </div>
    </div>
    <div class="col-5">
        <h4 class="lighter mb20">
            项目图片
        </h4>
        <div class="uploadimg" id="ImageList1">
            @foreach (var item in Model.ProjectPicList.OrderBy(a => a.Seq))
            {
                <dl id='img-@item.PicID'>
                    <dd>
                        <a href="@NHH.Framework.Utility.UrlHelper.GetImageUrl(item.Path)" data-rel="colorbox">
                            <img class='ImageItem' src='@NHH.Framework.Utility.UrlHelper.GetImageUrl(item.Path,100)' data-filepath='@item.Path'>
                        </a>
                    </dd>
                </dl>
            }
        </div>
    </div>
    <div class="col-5">
        <h4 class="lighter mb20">
            公共交通
        </h4>
        @Html.Raw(Model.PublicTransport)
    </div>
    <div class="col-5">
        <h4 class="lighter mb20">
            项目介绍
        </h4>
        @Html.Raw(Model.Introduce)
    </div>
</div>
<div id="modal" class="modal fade" tabindex="-1" aria-hidden="true" style="display: none;"></div>
<script src="~/Scripts/ImagePopUp.js"></script>
@model  NHH.Models.Estate.RepairDetailModel
<form class="form-horizontal" novalidate="novalidate">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header no-padding">
                <div class="table-header">
                    <button type="button" class="close" data-dismiss="modal" aria-hidden="true">
                        <span class="white">×</span>
                    </button>
                    维修人员信息
                </div>
                <div class="modal-body no-padding nothing">
                    <div class="popWinStyle">
                        <div class="form-group">
                            <label class="col-sm-3 control-label no-padding-right" for="form-field-1">员工号： </label>
                            <label class="col-xs-10 col-sm-5">@Model.RepairUserId</label>
                        </div>
                        <div class="form-group">
                            <label class="col-sm-3 control-label no-padding-right" for="form-field-1">姓名： </label>
                            <label class="col-xs-10 col-sm-5">@Model.RepairUserName</label>
                        </div>
                        <div class="form-group">
                            <label class="col-sm-3 control-label no-padding-right" for="form-field-1">电话号码： </label>
                            <label class="col-xs-10 col-sm-5">@Model.RepairMobile</label>
                        </div>
                        <div class="form-group">
                            <label class="col-sm-3 control-label no-padding-right" for="form-field-1">身份证号： </label>
                            <label class="col-xs-10 col-sm-5">@Model.CertificationId</label>
                        </div>
                        <div class="form-group">
                            <label class="col-sm-3 control-label no-padding-right" for="form-field-1">标签： </label>
                            <label class="col-xs-10 col-sm-5">@Model.Tag</label>
                        </div>
                    </div>
                </div>
                <div class="ui-btngroup">

                </div>
            </div>
        </div>
    </div>
</form>
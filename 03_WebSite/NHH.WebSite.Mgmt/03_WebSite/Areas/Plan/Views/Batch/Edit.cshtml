@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@model NHH.Models.Plan.ProjectBatchDetailModel
@{Html.RenderPartial("_PartialCrumbs", Model.CrumbInfo);}
<div class="page-content">
    <!-- page-content -->
    <div class="page-content-area">
        <div class="page-header">
            <h1>编辑招商批次</h1>
        </div><!-- /.page-header -->

        <div class="row">
            <div class="col-lg-12">
                <!-- PAGE CONTENT BEGINS -->
                @using (Html.BeginForm("Edit", "Batch", new { area = "Plan" }, FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
                {
                    <div class="form-group">
                        <label class="col-lg-3 control-label">项目名称：</label>
                        <div class="col-lg-9">
                            <div class="help-block">
                                @Model.ProjectName
                            </div>
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="col-lg-3 control-label"><span class="req">*</span> 批次编号： </label>
                        <div class="col-lg-9">
                            <div class="input-group">
                                @Html.TextBox("BatchCode", Model.BatchCode, new { placeholder = "批次编号" })
                                <span class="help-inline">
                                    <span class="middle red">
                                        @Html.ValidationMessage("BatchCode")
                                    </span>
                                </span>
                            </div>
                        </div>
                    </div>
                    <div class="space-4"></div>
                    <div class="clearfix form-actions">
                        <div class="col-lg-offset-3 col-lg-9">
                            @Html.Hidden("ProjectId", Model.ProjectID)
                            @Html.Hidden("BatchId", Model.BatchID)
                            <input class="btn btn-xs btn-success btn-font input-btn" type="submit" value="提交信息" />
                        </div>
                    </div>
                }
            </div>
            <!-- /.col -->
        </div><!-- /.row -->
    </div><!-- /.page-content-area -->
</div>
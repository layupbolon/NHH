@{Layout = "~/Views/Shared/_Layout.cshtml";}
@model NHH.Models.Contract.ContractDetailModel

@{Html.RenderPartial("_PartialCrumbs", Model.CrumbInfo);}
<div class="rowA">
    <div class="col-5">
        <h4 class="lighter mb20">
            @Model.MerchantName
            <small>@Model.ContractCode</small>
        </h4>
        <div class="hr hr-18 hr-double dotted"></div>
        <h4 class="lighter">商户信息</h4>
        <dl class="form-content form-content-edit form-row-comb">
            <dd>
                <label>公司类型：</label>
                @Model.MerchantInfo.MerchantTypeInfo.Name
            </dd>
            <dd>
                <label>公司简称：</label>
                @Model.MerchantInfo.BriefName
            </dd>
            <dd>
                <label>公司名称：</label>
                @Model.MerchantName
            </dd>
            <dd>
                <label>公司地址：</label>
                @Model.MerchantInfo.MerchantAddress
            </dd>
            <dd>
                <label>品牌信息：</label>
                @foreach (var brand in Model.BrandList)
                {
                    <span>@brand.BrandName</span><span>（@brand.BrandType）</span>
                }
            </dd>
        </dl>
        <div class="clear"></div>
    </div>
    <div class="col-5" id="unitInfo">
        @{Html.RenderAction("UnitInfo", "ContractInfo", new { area = "Contract", contractId = Model.ContractID });}
    </div>
    <div class="col-5" id="contractInfo">
        @{Html.RenderAction("ContractInfo", "ContractInfo", new { area = "Contract", contractId = Model.ContractID });}
    </div>
    <div class="col-5" id="rentPaymentInfo">
        @{Html.RenderAction("RentPaymentInfo", "ContractInfo", new { area = "Contract", contractId = Model.ContractID });}
    </div>
    <div class="col-5" id="mgmtPaymentInfo">
        @{Html.RenderAction("MgmtPaymentInfo", "ContractInfo", new { area = "Contract", contractId = Model.ContractID });}
    </div>
    <div class="col-5" id="unitSpec1">
        @{Html.RenderAction("UnitSpec1", "ContractInfo", new { area = "Contract", contractId = Model.ContractID });}
    </div>
    <div class="col-5" id="unitSpec2">
        @{Html.RenderAction("UnitSpec2", "ContractInfo", new { area = "Contract", contractId = Model.ContractID });}
    </div>
    <div class="col-5" id="supplementaryList">
        @{Html.RenderPartial("ContractInfo/_PartialSupplementary", Model);}
    </div>
    <div class="col-5" id="appendixList">
        @{Html.RenderPartial("ContractInfo/_PartialAppendix", Model);}
    </div>
    <!-- .col-2 -->
</div>
@Html.Hidden("ContractID", Model.ContractID)
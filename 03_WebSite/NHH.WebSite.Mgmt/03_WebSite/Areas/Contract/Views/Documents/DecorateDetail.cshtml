@{Layout = "~/Views/Shared/_Layout.cshtml";}
@model NHH.Models.Contract.DecorateDetailInfo

@{Html.RenderPartial("_PartialCrumbs", Model.CrumbInfo);}
<div class="rowA">
    <div class="col-5">
        <h4 class="lighter">申请者资料</h4>
        <div class="hr hr-18 hr-double dotted"></div>
        <dl class="form-content">
            <dd>
                <label>用户姓名：</label>
                @Model.RequestUserName
            </dd>
            <dd>
                <label>联系电话：</label>
                @Model.ContactPhone
            </dd>
            <dd>
                <label>商铺名称：</label>
                @Model.MerchantStoreName
            </dd>
            <dd>
                <label>项目：</label>
                @Model.ProjectUnitInfo.ProjectName
            </dd>
            <dd>
                <label>楼宇：</label>
                @Model.ProjectUnitInfo.BuildingName
            </dd>
            <dd>
                <label>楼层：</label>
                @Model.ProjectUnitInfo.FloorName
            </dd>
            <dd>
                <label>商铺编号：</label>
                @Model.ProjectUnitInfo.UnitNumber
            </dd>
        </dl>
        <div class="clear"></div>
        <div class="hr hr-18 hr-double dotted"></div>
        <h4 class="lighter">申请内容</h4>
        <dl class="form-content textstyle">
            <dd>
                <label>装修施工公司名称：</label>
                <span>@Model.DecorationCompanyName</span>
            </dd>
            <dd>
                <label>装修施工公司地址：</label>
                <span>@Model.DecorationCompanyAddress</span>
            </dd>
            <dd>
                <label>现场负责人：</label>
                <span>@Model.PersonInCharge</span>
            </dd>
            <dd>
                <label>联络电话：</label>
                <span>@Model.Phone</span>
            </dd>
            <dd>
                <label>装修期限：</label>
                <span>@Model.StartDate.ToString("yyyy年MM月dd日") 至 @Model.EndDate.ToString("yyyy年MM月dd日")</span>
            </dd>
            <dd>
                <label>装修项目：</label>
                <span>@Model.Remark</span>
            </dd>
        </dl>
        <div class="clear"></div>
    </div>
    <div class="col-5">
        @{Html.RenderPartial("Approve/_PartialApprove", Model);}
    </div>
</div>
@Html.Hidden("DocumentID", Model.DocumentID)
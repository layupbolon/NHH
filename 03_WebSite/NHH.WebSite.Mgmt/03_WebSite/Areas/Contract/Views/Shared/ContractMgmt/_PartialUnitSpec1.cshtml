        <label>墙：</label>
        <span>@Html.TextArea("Wall", Model.Wall, new { cols = "50" })</span>
    </dd>
    <dd>
        <label>柱：</label>
        <span>@Html.TextArea("Pillar", Model.Pillar, new { cols = "50" })</span>
    </dd>
    <dd>
        <label>楼板承重：</label>
        <span>@Html.TextArea("FloorBearing", Model.FloorBearing, new { cols = "50" })</span>
    </dd>
    <dd>
        <label>给水：</label>
        <span>@Html.TextArea("WaterSupply", Model.WaterSupply, new { cols = "50" })</span>
    </dd>
    <dd>
        <label>排水：</label>
        <span>@Html.TextArea("WaterDrain", Model.WaterDrain, new { cols = "50" })</span>
    </dd>

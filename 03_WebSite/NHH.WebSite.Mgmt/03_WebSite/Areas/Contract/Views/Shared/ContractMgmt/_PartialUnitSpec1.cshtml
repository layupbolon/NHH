        <span>@Html.TextArea("Security", Model.Security, new { cols = "50" })</span>
    </dd>
    <dd>
        <label>综合布线：</label>
        <span>@Html.TextArea("Wiring", Model.Wiring, new { cols = "50" })</span>
    </dd>
    <dd>
        <label>煤气：</label>
        <span>@Html.TextArea("Gas", Model.Gas, new { cols = "50" })</span>
    </dd>
</dl>
<div class="btn-edit">
    <a href="###" class="btn btn-info mr20" id="btnUnitSpec1">保存信息</a>
    <a href="###" class="btn cancelEditUnitSpec1">取消编辑</a>
</div>
<script type="text/javascript">
    $("#lbtnUnitSpec1").click(function () {
        var url = "@Url.Action("UnitSpec1", "ContractInfo", new { area = "Contract" })";
        url += "?contractId=" + $("#ContractID").val();
        $("#unitSpec1").load(url);
    });
    $("#btnUnitSpec1").click(function () {
        var unitSpec = {};
        unitSpec.SpecType = 1;
        unitSpec.ContractID = $("#ContractID").val();
        unitSpec.Floor = $("#Floor").val();
        unitSpec.Ceiling = $("#Ceiling").val();
        unitSpec.Wall = $("#Wall").val();
        unitSpec.Pillar = $("#Pillar").val();
        unitSpec.FloorBearing = $("#FloorBearing").val();
        unitSpec.WaterSupply = $("#WaterSupply").val();
        unitSpec.WaterDrain = $("#WaterDrain").val();
        unitSpec.Door = $("#Door").val();
        unitSpec.Logo = $("#Logo").val();
        unitSpec.ElectricityUsage = $("#ElectricityUsage").val();
        unitSpec.FireProtection = $("#FireProtection").val();
        unitSpec.Broadcasting = $("#Broadcasting").val();
        unitSpec.AirCondition = $("#AirCondition").val();
        unitSpec.Smoke = $("#Smoke").val();
        unitSpec.Security = $("#Security").val();
        unitSpec.Wiring = $("#Wiring").val();
        unitSpec.Gas = $("#Gas").val();
        var url = "@Url.Action("UpdateUnitSpec1", "ContractMgmt", new { area = "Contract" })";
        $("#unitSpec1").load(url, unitSpec, function (response, status, xhs) {
            $(this).html(response);
        });
    });
    $(".cancelEditUnitSpec1").click(function () {
        var url = "@Url.Action("UnitSpec1", "ContractInfo", new { area = "Contract" })";
        url += "?contractId=" + $("#ContractID").val();
        $("#unitSpec1").load(url);
    });
</script>
<div class="clear"></div>
        <label>标牌：</label>
        <span>@Html.TextArea("Logo", Model.Logo, new { cols = "50" })</span>
    </dd>
    <dd>
        <label>供电系统：</label>
        <span>@Html.TextArea("ElectricityUsage", Model.ElectricityUsage, new { cols = "50" })</span>
    </dd>
    <dd>
        <label>消防系统：</label>
        <span>@Html.TextArea("FireProtection", Model.FireProtection, new { cols = "50" })</span>

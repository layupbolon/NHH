@model NHH.Models.Contract.ContractInfo

<h4 class="lighter">租约信息</h4>
@if(Model.ContractStatus == 2)
{ 
    <a class="edit-btn" href="javascript:void(0);" id="lbtnContractInfo" data-contractId="@Model.ContractID">编辑信息</a>
    <script type="text/javascript">
        $("#lbtnContractInfo").click(function () {
            var url = "@Url.Action("ContractInfo", "ContractMgmt", new { area = "Contract" })";
            url += "?contractId=" + $("#ContractID").val();
            $("#contractInfo").load(url);
        });
    </script>
}
<dl class="form-content form-content-edit form-row-comb">
    <dt><i>租期条款</i></dt>
    <dd>
        <label>合同天数：</label>
        <span>@Model.ContractLength.ToString("#,##0.00") 天</span>
    </dd>
    <dd>
        <label>合同开始日期：</label>
        <span>@Model.ContractStartDate.ToString("yyyy-MM-dd")</span>
    </dd>
    <dd>
        <label>合同结束日期：</label>
        <span>@Model.ContractEndDate.ToString("yyyy-MM-dd")</span>
    </dd>
    <dd>
        <label>免租期：</label>
        <span>@Model.RentFreeLength 月</span>
    </dd>
    <dd>
        <label>免租开始日期：</label>
        <span>@Model.RentFreeStartDate.ToString("yyyy-MM-dd")</span>
    </dd>
    <dd>
        <label>免费结束日期：</label>
        <span>@Model.RentFreeEndDate.ToString("yyyy-MM-dd")</span>
    </dd>
    <dd>
        <label>进场日期：</label>
        <span>@Model.AccessDate.ToString("yyyy-MM-dd")</span>
    </dd>
</dl>
<div class="clear"></div>
<dl class="form-content form-content-edit form-row-comb">
    <dt><i>租约单价</i></dt>
    <dd>
        <label>租金单价：</label>
        @Model.ContractUnitRent.ToString("#,##0.00")
        <span>元/天/平米</span>
    </dd>
    <dd>
        <label>物业费单价：</label>
        @Model.ContractMgmtFee.ToString("#,##0.00")
        <span>元/天/平米</span>
    </dd>
    <dd>
        <label>履约保证金：</label>
        <span>@Model.BidBond.ToString("#,##0.00") 元</span>
    </dd>
    <dd>
        <label>物业保证金：</label>
        <span>@Model.ManageBond.ToString("#,##0.00") 元</span>
    </dd>
</dl>
<div class="clear"></div>
<dl class="form-content form-content-edit form-row-comb">
    <dt><i>装修条款</i></dt>
    <dd>
        <label>装修期限：</label>
        <span>@Model.DecorationLength 月</span>
    </dd>
    <dd>
        <label>装修开始日期：</label>
        <span>@Model.DecorationStartDate.ToString("yyyy-MM-dd")</span>
    </dd>
    <dd>
        <label>装修结束日期：</label>
        <span>@Model.DecorationEndDate.ToString("yyyy-MM-dd")</span>
    </dd>
    <dd>
        <label>场地管理费：</label>
        <span>@Model.DecorationMgmtFee.ToString("#,##0.00") 元</span>
    </dd>
    <dd>
        <label>质量保证金：</label>
        <span>@Model.QualityBond.ToString("#,##0.00") 元</span>
    </dd>
    <dd>
        <label>装修保证金：</label>
        <span>@Model.DecorationBond.ToString("#,##0.00") 元</span>
    </dd>
</dl>
<div class="clear"></div>
<dl class="form-content form-content-edit form-row-comb">
    <dt><i>其它条款</i></dt>
    <dd>
        <label>免费停车位：</label>
        <span>@Model.ParkingLotNum @Model.ParkingLotMemo</span>
    </dd>
    <dd>
        <label>免费广告位：</label>
        <span>@Model.AdPointNum @Model.AdPointMemo</span>
    </dd>
    <dd>
        <label>交付标准：</label>
        <span>@Model.ConditionText</span>
    </dd>
</dl>
<div class="clear"></div>
<dl class="form-content form-content-edit form-row-comb">
    <dt><i>签约信息</i></dt>
    <dd>
        <label>签约人姓名：</label>
        <span>@Model.SignerName</span>
    </dd>
    <dd>
        <label>签约人身份证号：</label>
        <span>@Model.SignerIDNumber</span>
    </dd>
    <dd>
        <label>签约人联系电话：</label>
        <span>@Model.SignerPhone</span>
    </dd>
    <dd>
        <label>经办人姓名：</label>
        <span>@Model.OperatorName</span>
    </dd>
    <dd>
        <label>经办人联系电话：</label>
        <span>@Model.OperatorPhone</span>
    </dd>
</dl>
<div class="clear"></div>
@{Layout = "~/Views/Shared/_Layout.cshtml";}
@model NHH.Models.Common.Company.CompanyDetailModel

<style type="text/css">
    .col-sm-9 {
        margin-top: 11px;
    }
</style>
@{Html.RenderPartial("_PartialCrumbs", Model.CrumbInfo);}
<div class="page-content">
    <!-- page-content -->
    <div class="page-content-area">
        <div class="page-header">
            <h1>@Model.CompanyName</h1>
        </div><!-- /.page-header -->

        <div class="row">
            <div class="col-xs-12">
                <!-- PAGE CONTENT BEGINS -->
                <form class="form-horizontal" role="form">
                    <div class="form-group">
                        <label class="col-sm-3 control-label no-padding-right" for="form-field-1"> 公司名称： </label>
                        <div class="col-sm-9">@Model.CompanyName</div>
                    </div>
                    <!-- Default Form -->
                    <div class="space-4"></div>
                    <div class="form-group">
                        <label class="col-sm-3 control-label no-padding-right" for="form-field-1"> 公司类型： </label>
                        <div class="col-sm-9">@Model.CompanyTypeInfo.Name</div>
                    </div>
                    <!-- Success Form -->
                    <div class="space-4"></div>
                    <div class="form-group">
                        <label class="col-sm-3 control-label no-padding-right" for="form-field-1"> 公司中文简称： </label>
                        <div class="col-sm-9">@Model.BriefName</div>
                    </div>
                    <div class="form-group">
                        <label class="col-sm-3 control-label no-padding-right" for="form-field-1"> 公司英文编码： </label>
                        <div class="col-sm-9">@Model.CompanyCode</div>
                    </div>
                    <!-- double input Form -->
                    <div class="space-4"></div>
                    <div class="form-group">
                        <label class="col-sm-3 control-label no-padding-right" for="form-field-1"> 公司地址： </label>
                        <div class="col-sm-9">@Model.CompanyAddress</div>
                    </div>
                    <!-- Default Form -->
                    <div class="space-4"></div>

                    <div class="form-group">
                        <label class="col-sm-3 control-label no-padding-right" for="form-field-1"> 邮政编码： </label>
                        <div class="col-sm-9">@Model.ZipCode</div>
                    </div>
                    <!-- Default Form -->
                    <div class="space-4"></div>
                    <div class="form-group">
                        <label class="col-sm-3 control-label no-padding-right" for="form-field-1"> 营业执照注册号码： </label>
                        <div class="col-sm-9 input-merge">@Model.LicenseID</div>
                    </div>
                    <!-- Default Form -->
                    <div class="space-4"></div>
                    <div class="form-group">
                        <label class="col-sm-3 control-label no-padding-right" for="form-field-1"> 注册地址： </label>
                        <div class="col-sm-9 input-merge">@Model.CompanyRegisterAddress</div>
                    </div>
                    <!-- Default Form -->
                    <div class="space-4"></div>
                    <div class="form-group">
                        <label class="col-sm-3 control-label no-padding-right" for="form-field-1"> 法人姓名： </label>
                        <div class="col-sm-9 input-merge">@Model.OwnerName</div>
                    </div>
                    <!-- Default Form -->
                    <div class="space-4"></div>
                    <div class="form-group">
                        <label class="col-sm-3 control-label no-padding-right" for="form-field-1"> 联系人姓名： </label>
                        <div class="col-sm-9 input-merge">@Model.ContactName</div>
                    </div>
                    <!-- Default Form -->
                    <div class="space-4"></div>
                    <div class="form-group">
                        <label class="col-sm-3 control-label no-padding-right" for="form-field-1"> 联系人身份证号码： </label>
                        <div class="col-sm-9 input-merge">@Model.ContactIDNumber</div>
                    </div>
                    <!-- Default Form -->
                    <div class="space-4"></div>
                    <div class="form-group">
                        <label class="col-sm-3 control-label no-padding-right" for="form-field-1"> 联系人邮箱： </label>
                        <div class="col-sm-9 input-merge">@Model.ContactEmail</div>
                    </div>
                    <!-- Default Form -->
                    <div class="space-4"></div>
                    <div class="form-group">
                        <label class="col-sm-3 control-label no-padding-right" for="form-field-1"> 联系人电话： </label>
                        <div class="col-sm-9 input-merge">@Model.ContactPhone</div>
                    </div>
                    <!-- Default Form -->
                    <div class="space-4"></div>
                    <div class="form-group">
                        <label class="col-sm-3 control-label no-padding-right" for="form-field-1"> 银行账号： </label>
                        <div class="col-sm-9 input-merge">@Model.FinanceInfo.BankAccount</div>
                    </div>
                    <!-- Default Form -->
                    <div class="space-4"></div>
                    <div class="form-group">
                        <label class="col-sm-3 control-label no-padding-right" for="form-field-1"> 开户银行： </label>
                        <div class="col-sm-9 input-merge">@Model.FinanceInfo.OpeningBank</div>
                    </div>
                    <!-- Default Form -->
                    <div class="space-4"></div>
                    <div class="form-group">
                        <label class="col-sm-3 control-label no-padding-right" for="form-field-1"> 开户名称： </label>
                        <div class="col-sm-9 input-merge">@Model.FinanceInfo.OpeninBankName</div>
                    </div>
                    <div class="space-4"></div>
                    <div class="form-group">
                        <label class="col-sm-3 control-label no-padding-right" for="form-field-1"> 开户支行名称： </label>
                        <div class="col-sm-9 input-merge">@Model.FinanceInfo.SubBranch</div>
                    </div>
                    <!-- Default Form -->
                    <div class="space-4"></div>
                    <div class="form-group">
                        <label class="col-sm-3 control-label no-padding-right" for="form-field-1"> 支付宝账号： </label>
                        <div class="col-sm-9 input-merge">@Model.FinanceInfo.AlipayAccount</div>
                    </div>
                    <!-- Default Form -->
                    <div class="space-4"></div>
                    <div class="form-group">
                        <label class="col-sm-3 control-label no-padding-right" for="form-field-1"> 微信账号： </label>
                        <div class="col-sm-9 input-merge">@Model.FinanceInfo.WechatAccount</div>
                    </div>
                    <!-- Default Form -->
                    <div class="space-4"></div>
                    <div class="form-group">
                        <label class="col-sm-3 control-label no-padding-right" for="form-field-1"> 财务联系人： </label>
                        <div class="col-sm-9 input-merge">@Model.FinanceInfo.FinanceContact</div>
                    </div>
                    <!-- Default Form -->
                    <div class="space-4"></div>
                    <div class="form-group">
                        <label class="col-sm-3 control-label no-padding-right" for="form-field-1"> 财务联系方式： </label>
                        <div class="col-sm-9 input-merge">@Model.FinanceInfo.FinancePhone</div>
                    </div>
                    <div class="space-4"></div>
                    <div class="clearfix form-actions">
                        <div class="col-md-offset-3 col-md-9">
                            <input class="btn btn-xs btn-success btn-font input-btn btnBack" type="button" value="返回" />
                            &nbsp; &nbsp; &nbsp;

                            @Html.ActionLink("编辑", "Edit", "Company", new { area = "Common", companyId = Model.CompanyID }, new { @class = "btn btn-xs btn-success btn-font" })
                        </div>
                    </div>
            </div>
            <!-- /.col -->
        </div><!-- /.row -->
    </div><!-- /.page-content-area -->
</div>

<script type="text/javascript">
    $(".btnBack").click(function () {
        location.href = history.back();
    });

</script>
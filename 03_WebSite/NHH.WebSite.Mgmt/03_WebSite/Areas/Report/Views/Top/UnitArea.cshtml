@{ Layout = "~/Views/Shared/_Layout.cshtml";}
@model NHH.Models.Report.TopReportModel

@{Html.RenderPartial("_PartialCrumbs", Model.CrumbInfo);}

<div class="page-content">
    <div class="page-content-area">
        <div class="page-header">
            <h1>
                商铺面积Top10
            </h1>
        </div><!-- /.page-header -->
        <div class="screen-area">
            <form>
                <dl class="list-screen">
                    <dt>选择项目：</dt>
                    <dd>@Html.DropDownList("ProjectId", ViewData["ProjectList"] as SelectList)</dd>
                </dl>
                <dl class="list-screen">
                    <dt>开始时间：</dt>
                    <dd class="input-daterange">
                        @Html.TextBox("StartTime", Model.QueryInfo.StartTime.ToString("yyyy-MM-dd"))
                    </dd>
                </dl>
                <dl class="list-screen">
                    <dt>结束时间：</dt>
                    <dd class="input-daterange">
                        @Html.TextBox("EndTime", Model.QueryInfo.EndTime.ToString("yyyy-MM-dd"))
                    </dd>
                </dl>
                <div class="result-btn">
                    <a class="btn btn-xs btn-success btn-font" id="lnkSearch" href="javascript:void(0);">查询</a>
                </div>
            </form>
        </div>
        <div class="row">
            <div class="col-xs-12">
                <!-- PAGE CONTENT BEGINS -->
                <div class="row">
                    <div class="col-xs-12">
                        <h4 class="lighter mt30">
                            商铺列表
                        </h4>
                        <div class="hr hr-18 hr-double dotted"></div>
                        <table id="sample-table-1" class="table table-striped table-bordered table-hover">
                            <thead>
                                <tr>
                                    <th>商铺</th>
                                    <th>商户简称</th>
                                    <th>业态</th>
                                    <th>品牌</th>
                                    <th>类型</th>
                                    <th>总签约面积</th>
                                    <th>经营品类</th>
                                    <th>当月租金</th>
                                    <th>当月物业费</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model.Data)
                                {
                                    <tr>
                                        <td></td>
                                        <td></td>
                                        <td></td>
                                        <td></td>
                                        <td></td>
                                        <td></td>
                                        <td></td>
                                        <td></td>
                                        <td></td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                        <ul class="pagination pull-right no-margin">
                            <li class="prev disabled">
                                <a href="#">
                                    上一页
                                </a>
                            </li>

                            <li class="active">
                                <a href="#">1</a>
                            </li>

                            <li>
                                <a href="#">2</a>
                            </li>

                            <li>
                                <a href="#">3</a>
                            </li>

                            <li class="next">
                                <a href="#">
                                    下一页
                                </a>
                            </li>
                        </ul>
                    </div><!-- /.span -->
                </div><!-- /.row -->
            </div><!-- /.col -->
        </div><!-- /.row -->
    </div><!-- /.page-content-area -->
</div>
@{Layout = "~/Views/Shared/_Layout.cshtml";}
@model NHH.Models.Message.UserMessageDetailModel

@{Html.RenderPartial("_PartialCrumbs", Model.CrumbInfo);}

<div class="page-content">
    <!-- page-content -->
    <div class="page-content-area">
        <div class="page-header">
            <h1>消息内容</h1>
        </div><!-- /.page-header -->

        <div class="row">
            <div class="col-xs-12">
                <div class="form-horizontal" role="form">
                    <div class="space-4"></div>
                    <div class="form-group">
                        <label class="col-sm-3 control-label no-padding-right" for="form-field-1"> 消息标题： </label>
                        <div class="col-sm-9">
                            <span class="defauletext">
                                @Model.Subject
                            </span>
                        </div>
                    </div>
                    <div class="space-4"></div>
                    <div class="form-group">
                        <label class="col-sm-3 control-label no-padding-right" for="form-field-1"> 消息内容： </label>
                        <div class="col-sm-9">
                            <span class="defauletext">
                                @Html.Raw(Model.Content)
                            </span>
                        </div>
                    </div>
                    <div class="space-4"></div>
                    <div class="form-group">
                        <label class="col-sm-3 control-label no-padding-right" for="form-field-1"> 消息来源： </label>
                        <div class="col-sm-9">
                            <span class="defauletext">
                                @Model.SourceTypeName
                            </span>
                        </div>
                    </div>
                    <div class="space-4"></div>
                    <div class="form-group">
                        <label class="col-sm-3 control-label no-padding-right" for="form-field-1"> 消息状态： </label>
                        <div class="col-sm-9">
                            <span class="defauletext">
                                @Model.MessageStatus
                            </span>
                        </div>
                    </div>

                    <!-- /.col -->
                </div><!-- /.row -->
            </div><!-- /.page-content-area -->
        </div>
    </div>
</div>
@{ Layout = "~/Views/Shared/_Layout.cshtml"; }
@model NHH.Models.Configure.SysMenuDeatilModel

@{Html.RenderPartial("_PartialCrumbs", Model.CrumbInfo);}

<div class="page-content">
    <div class="page-header">
        <h1>编辑功能</h1>
    </div><!-- /.page-header -->
    <div class="row">
        <div class="col-xs-12">
            @using (Html.BeginForm("Edit", "Menu", new { area = "System" }, FormMethod.Post, new { @class = "form-horizontal", role = "form", novalidate = "novalidate" }))
            {
                @Html.AntiForgeryToken()
                <div class="space-4"></div>
                <div class="form-group">
                    <label class="col-sm-3 control-label no-padding-right" for="form-field-1"><span class="req">*</span> 排序： </label>
                    <div class="col-sm-9">
                        @Html.TextBoxFor(m => m.SeqNo, null, new { @class = "col-xs-10 col-sm-5" })
                        <span class="help-inline col-xs-12 col-sm-7">
                            <span class="middle red">
                                @Html.ValidationMessageFor(m => m.SeqNo)
                            </span>
                        </span>
                    </div>
                </div>
                <div class="space-4"></div>
                <div class="form-group">
                    <label class="col-sm-3 control-label no-padding-right" for="form-field-1"> 父菜单： </label>
                    <div class="col-sm-9">
                        @Html.DropDownList("ParentID", ViewData["MenuList"] as SelectList, "", new { @class = "col-xs-10 col-sm-5" })
                    </div>
                </div>
                <div class="space-4"></div>
                <div class="form-group">
                    <label class="col-sm-3 control-label no-padding-right" for="form-field-1"><span class="req">*</span> 菜单名称： </label>
                    <div class="col-sm-9">
                        @Html.TextBoxFor(m => m.MenuName, new { @class = "col-xs-10 col-sm-5" })
                        <span class="help-inline col-xs-12 col-sm-7">
                            <span class="middle red">
                                @Html.ValidationMessageFor(m => m.MenuName)
                            </span>
                        </span>
                    </div>
                </div>
                <div class="space-4"></div>
                <div class="form-group">
                    <label class="col-sm-3 control-label no-padding-right" for="form-field-1"><span class="req">*</span> 菜单路径： </label>
                    <div class="col-sm-9">
                        @Html.TextBoxFor(m => m.MenuUrl, new { @class = "col-xs-10 col-sm-5" })
                        <span class="help-inline col-xs-12 col-sm-7">
                            <span class="middle red">
                                @Html.ValidationMessageFor(m => m.MenuUrl)
                            </span>
                        </span>
                    </div>
                </div>
                <div class="space-4"></div>
                <div class="form-group">
                    <label class="col-sm-3 control-label no-padding-right" for="form-field-1"> 菜单图标： </label>
                    <div class="col-sm-9">
                        @Html.TextBoxFor(m => m.MenuIcon, new { @class = "col-xs-10 col-sm-5" })
                    </div>
                </div>
                <div class="space-4"></div>
                <div class="form-group">
                    <label class="col-sm-3 control-label no-padding-right" for="form-field-1"> 菜单描述： </label>
                    <div class="col-sm-9">
                        @Html.TextBoxFor(m => m.MenuDescription, new { @class = "col-xs-10 col-sm-5" })
                    </div>
                </div>
                <div class="space-4"></div>
                <div class="form-group">
                    <label class="col-sm-3 control-label no-padding-right" for="form-input-readonly"></label>
                    <div class="col-sm-9">
                        <input class="btn btn-xs btn-success btn-font" type="submit" id="btnSave" value="保存">
                        &nbsp; &nbsp; &nbsp;
                        <input class="btn btn-xs btn-success btn-font" type="reset" value="取消">
                    </div>
                </div>
                @Html.HiddenFor(m => m.MenuID)
            }
        </div>
    </div>
</div>
